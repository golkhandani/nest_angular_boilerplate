{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "alwaysStrict": true,
    "diagnostics": true,
    // "strictNullChecks": true,
    "baseUrl": "./src",
    "paths": {
      "@services/*": [
        "services/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@sockets/*":[
        "sockets/*"
      ]
    },
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}